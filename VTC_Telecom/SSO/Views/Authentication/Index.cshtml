
@{
    Layout = null;
    string URL = String.Concat(Request.Url.Scheme, "://", Request.Url.Host, (Request.Url.IsDefaultPort ? "" : String.Concat(":", Request.Url.Port)));
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link href="~/Content/Login/style.css" rel="stylesheet" type='text/css' />
    <title>VTC SSO</title>
    <link rel="shortcut icon" href="~/Content/images/ICONVTC.png" type="image/png" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text.css' />
</head>

<body>
    <div class="main">
        @using (Html.BeginForm())
        {
            <form>
                <h1><span>VTC Telecom</span> <lable> Đăng nhập </lable> </h1>
                <div class="inset">
                    <p>
                        <label for="username">TÊN ĐĂNG NHẬP</label>
                        <input type="text" name="UserName" id="UserName" placeholder="Tên đăng nhập" onfocus="this.placeholder = '';" onblur="if (this.placeholder == '') {this.placeholder = 'Tên đăng nhập';}">
                    </p>
                    <p>
                        <label for="password">MẬT KHẨU</label>
                        <input type="password" name="PassWord" id="PassWord" placeholder="Mật khẩu" onfocus="this.placeholder = '';" onblur="if (this.placeholder == '') {this.placeholder = 'Mật khẩu';}">
                    </p>
                    <p style="color:red">@ViewBag.ERROR</p>
                </div>

                <p class="p-container">
                    <span><a href="#">Quên mật khẩu ?</a></span>
                    <input type="submit" value="Đăng nhập">
                </p>
            </form>
        }
    </div>
</body>
</html>
